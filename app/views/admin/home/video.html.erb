<%=render "shared/admin_setting_left"%>
<div id="main-wrapper">
	<div id="main-content">
		<%=render "shared/notice"%>

		<div class="title title-spacing">
			<h3>后台-首页轮播图设定</h3>	
		</div>
		<div class="portlet ui-widget ui-widget-content ui-helper-clearfix ui-corner-all form-container">
			<div class="portlet-header ui-widget-header">添加视频地址</div>
				<div class="portlet-content">
					<%=form_for "home",:url=>:admin_home_index ,:html=>{:class=> "form-horizontal home_image" ,:role=>"form"} do |f|%>
						<ul>
                           	<li> 
		<span class="width_align_right">优酷地址：</span> 
       <span class="width_content">
       		<input type="text" class="title large" name="home[url]" />	
			<input type="hidden" name="home[flag]" value="home_video" />	
             
       </span>
    </li>
   

	 <li style-"margin-top:10px;"> 
		<span class="width_align_right">&nbsp;</span> 
		<span class=""> <%=f.submit "提交" %>  </span>
	</li>													


						</ul>	
					<%end%>
				</div>
			</div>



        <div class="title">
			<h3></h3>
		</div>

        <div class="hastable">
					
						<table class="display"> 
						<thead> 
						<tr>
							<th>#ID</th>
						 
                            <th>链接</th>
                         
                            <th>操作</th>    
							
						</tr> 
						</thead> 
						<tbody> 
						<% @images.each do |image| %>
					
					         <tr>
                
                   <td><%= image.id%></td>
  
                   <td><%= image.url%></td>
              
                   <td>
            
 
                   <%=link_to  "删除", admin_home_path(image), method: :delete, data: { confirm: 'Are you sure?' } %> <%#= link_to '增加子项', new_admin_category_path(parent: category.id)%> </td>
                 </tr>

					   <%end%>			
						</tbody>
						</table>
						<%#=paginate @users%>



</div>
<div class="clearfix"></div>
</div>

</div>

	
<script>
$(function() {

  $('.home_image').validate({
    errorElement: "b",
    rules: {
        "home[url]": "required"
     },
    messages:{
       
        "home[url]": "不能为空"
       
    }
     });

})
</script>

