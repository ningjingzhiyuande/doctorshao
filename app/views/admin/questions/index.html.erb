<%=render "shared/admin_setting_left"%>
<div id="main-wrapper">
	<div id="main-content">
		<%=render "shared/notice"%>
        <div class="title">
		<h3>后台-案例管理</h3>
	</div>


        <div class="hastable">				
						<table id="datatable" class="display"> 
						<thead> 
						<tr>
							<th>#ID</th>
							<th>问题</th>
							<th>答案</th>
						    <th>归属</th> 
						    <th>操作</th> 
							
						</tr> 
						</thead> 
						<tbody> 
						  	<% @questions.each do |question| %>
					
					         <tr>
                
                   <td><%= question.id%></td>
                   <td><%= question.question%></td>
                   <td><%= question.answer%></td>
                    <td><%= question.entry.try(:name)%></td>
              
                   
                   <td>
                   <%=link_to  "编辑", edit_admin_question_path(question) %> |
                   <%=link_to  "删除", admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %> <%#= link_to '增加子项', new_admin_category_path(parent: category.id)%> </td>
                 </tr>

					   <%end%>	


						</tbody>
						</table>
						<%#=paginate @users%>



</div>
<div class="clearfix"></div>
</div>

</div>

<script>
$(function() {

$('#datatable').dataTable({
    "oLanguage": {
      "sLengthMenu": "每页显示 _MENU_ 条记录",
      "sZeroRecords": "对不起，查询不到任何相关数据",
      "sInfo": "当前显示 _START_ 到 _END_ 条，共 _TOTAL_ 条记录",
      "sInfoEmtpy": "找不到相关数据",
      "sInfoFiltered": "数据表中共为 _MAX_ 条记录)",
      "sProcessing": "正在加载中...",
      "sSearch": "搜索",
      "sUrl": "", //多语言配置文件，可将oLanguage的设置放在一个txt文件中，例：Javascript/datatable/dtCH.txt
      "oPaginate": {
          "sFirst":    "第一页",
          "sPrevious": " 上一页 ",
          "sNext":     " 下一页 ",
          "sLast":     " 最后一页 "
      }
  }

}) 


  $('.home_image').validate({
    errorElement: "b",
    rules: {
        "home[title]": "required",
        "home[image]": "required",
        "home[url]": "required"
     },
    messages:{
        "home[title]":"不能为空",
        "home[url]": "不能为空",
        "home[image]": "请选择图片"
    }
     });


})
</script>






