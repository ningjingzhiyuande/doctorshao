<%=render "shared/admin_setting_left"%>
<div id="main-wrapper">
	<div id="main-content">
		<%=render "shared/notice"%>
        <div class="title">
		<h3>后台-单页管理</h3>
			
			
		</div>


        <div class="hastable">
					
						<table id="datatable" class="display"> 
						<thead> 
						<tr>
							<th>#ID</th>
							<th>标题</th>
							
						    <th>内容</th> 
						    
						    
						    <th>操作</th> 
							
						</tr> 
						</thead> 
						<tbody> 
						<% @pages.each do |page| %>
						<tr>
							<td class="center"><%=page.id%></td> 
							<td><%=page.title%></td> 
						   
						    <td><%= page.content.try(:body) %></td> 
						  
						
						    <td>
								<a class="btn_no_text btn ui-state-default ui-corner-all tooltip" title="Edit this example" href="/admin/pages/<%=page.id%>/edit">修改
								</a>
						
							</td>
					
						</tr> 
					   <%end%>			
						</tbody>
						</table>
						<%#=paginate @users%>



</div>
<div class="clearfix"></div>
</div>

</div>

	
